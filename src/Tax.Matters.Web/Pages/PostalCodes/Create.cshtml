@page
@model Tax.Matters.Web.Pages.PostalCodes.CreateModel
@{
    ViewData["Title"] = "Create Postal Code";
}

<h2>Create</h2>
<h4>Postal Code</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="PostalCode.Code" class="control-label"></label>
                <input asp-for="PostalCode.Code" class="form-control" />
                <span asp-validation-for="PostalCode.Code" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PostalCode.IncomeTaxId" class="control-label"></label>
                <select asp-for="PostalCode.IncomeTaxId" class="form-control"
                        asp-items="@Model.TaxCalculationSelectList">
                    <option value="">-- Tax Calculation Type --</option>
                </select>
                <span asp-validation-for="PostalCode.IncomeTaxId" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}